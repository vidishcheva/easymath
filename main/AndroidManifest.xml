<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="a.vidishcheva.easymath">

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:configChanges="locale|orientation"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:windowSoftInputMode="adjustResize">
        <activity
            android:launchMode="singleTop"
            android:name="a.vidishcheva.easymath.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="a.vidishcheva.easymath.activities.Trigonometry"
            android:label="@string/title_activity_trigonometry"
            android:parentActivityName="a.vidishcheva.easymath.activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="a.vidishcheva.easymath.activities.MainActivity" />
        </activity>
        <activity
            android:name="a.vidishcheva.easymath.activities.Triangle"
            android:label="@string/title_activity_triangle"
            android:parentActivityName="a.vidishcheva.easymath.activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="a.vidishcheva.easymath.activities.MainActivity" />
            >
        </activity>
        <activity
            android:name="a.vidishcheva.easymath.activities.Logarithm"
            android:label="@string/title_activity_logarithm"
            android:parentActivityName="a.vidishcheva.easymath.activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="a.vidishcheva.easymath.activities.MainActivity" />
            >
        </activity>
        <activity
            android:name="a.vidishcheva.easymath.activities.Equations"
            android:label="@string/title_activity_equations"
            android:parentActivityName="a.vidishcheva.easymath.activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="a.vidishcheva.easymath.activities.MainActivity" />
            >
        </activity>
        <activity
            android:name="a.vidishcheva.easymath.experimental_lab.ExperimentalLab"
            android:label="@string/title_activity_one_power_equation"
            android:parentActivityName="a.vidishcheva.easymath.activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="a.vidishcheva.easymath.activities.MainActivity" />
        </activity>
        <activity
            android:name="a.vidishcheva.easymath.activities.Circle"
            android:label="@string/title_activity_circle"
            android:parentActivityName="a.vidishcheva.easymath.activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="a.vidishcheva.easymath.activities.MainActivity" />
        </activity>
    </application>

</manifest>
